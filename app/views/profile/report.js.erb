function renderReport() {
  var html = [
    '<h5>report for <%= @report[:date].to_date %></h5>',
    '<table class="table">', 
      '<thead>',
        '<tr>',
          '<th>daily charges</th>',
          '<th>taxes compansation</th>', 
          '<th>account service compensation</th>', 
          '<th>rent compansation</th>',
          '<%= @report[:additionals].map { |ad| "<th>#{ad[:name]}</th>" }.join('').html_safe %>',
          '<th>invoice</th>', 
        '</tr>', 
      '</thead>',
      '<tbody>',
        '<tr>',
          '<td>', '<%= @report[:daily_charges] %>$', '</td>',
          '<td>', '<%= @report[:taxes_compansation] %>$', '</td>', 
          '<td>', '<%= @report[:account_service_compensation] %>$', '</td>',
          '<td>', '<%= @report[:rent_compansation] %>$', '</td>',
          '<%= @report[:additionals].map { |ad| "<td>#{ad[:amount]}$</td>" }.join('').html_safe %>',
          '<td>', '<%= @report[:invoice_total] %>$','</td>',
        '</tr>',
      '</tbody>',
    '</table>'
  ]
  $('.notice').hide()
  $(".report_table").html('')
  $(".report_table").append(html.join(''));
}
renderReport()
